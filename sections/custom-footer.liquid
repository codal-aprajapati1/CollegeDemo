{{ 'custom-footer.css' | asset_url | stylesheet_tag }}

<footer class="main">
  <div
    class="footer-container"
    style="
                                                                                                                                                                                                                                                                                                                                                                                                                                    background: url('{{ section.settings.img | img_url }}') no-repeat; background-position: center; background-size: cover; width: 100%; max-width: 100vw;
    "
  >
    {% for block in section.blocks %}
      {% if block.type == 'footer-links' %}
        <div class="footer-left" id="accordion1">
          <h2 style="color: white; font-size: 3rem">{{ block.settings.linklist1.title }}</h2>
          <div>
            {% for link in block.settings.linklist1.links %}
              <p>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </p>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {% if block.type == 'footer-links2' %}
        <div class="footer-middle">
          <h2 style="color: white; font-size: 3rem">{{ block.settings.linklist2.title }}</h2>
          <div>
            {% for link in block.settings.linklist2.links %}
              <p>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </p>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {% if block.type == 'footer-links3' %}
        <div class="footer-right">
          <h2 style="color: white; font-size: 3rem">{{ block.settings.linklist3.title }}</h2>
          <div>
            {% for link in block.settings.linklist3.links %}
              <p>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </p>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
    {% for block in section.blocks %}
      {% if block.type == 'sociallinks' %}
        <div
          class="icons"
        >
          <a href="#"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svglink1 }}</span></a
          >
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svgtext1 }}</span></a
          >
          <br>
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svglink2 }}</span></a
          >
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svgtext2 }}</span></a
          >
          <br>
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svglink3 }}</span></a
          >
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svgtext3 }}</span></a
          >
          <br>
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svglink4 }}</span></a
          >
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svgtext4 }}</span></a
          >
          <br>
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svglink5 }}</span></a
          >
          <a href="#" style="text-decoration: none"
            ><span style="line-height: 10px; color: white;">{{ block.settings.svgtext5 }}</span></a
          >
          <br>
          <br>
          <div style="color: white">{{ section.settings.t1 }}</div>
          <input class="in-1" type="text" placeholder="Enter your email">
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="footer2">
    <span class="s1" style="margin-top: 1%">2024 Â©WatchVista. All rights reserved.</span>
    <img src="https://cdn.shopify.com/s/files/1/0860/9624/9106/files/pay-removebg-preview.png?v=1709570978">
  </div>
</footer>

